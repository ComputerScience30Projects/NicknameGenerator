{
	"version": "2.0.0",
	"tasks": [

		{
			"type": "shell",
			"label": "g++ build",
			"command":  "C:/MinGW/bin/g++",
			"args": [
				"-std=c++11",
				"-g",
				"*.cpp",
				"-o",
				"nicknameGenerator.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}